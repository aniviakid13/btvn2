<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4.5"
    tools:context=".linear">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="@integer/material_motion_duration_short_1"
            android:background="@color/color_1"
            android:text="@string/so1"
            android:textColor="#414141"
            android:textSize="40dp"
            app:backgroundTint="@null" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="@integer/material_motion_duration_short_1"
            android:background="@color/color_2"
            android:text="@string/so2"
            android:textColor="#414141"
            android:textSize="40dp"
            app:backgroundTint="@null" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="@integer/material_motion_duration_short_1"
            android:background="@color/color_3"
            android:text="@string/so3"
            android:textColor="#414141"
            android:textSize="40dp"
            app:backgroundTint="@null" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="@integer/material_motion_duration_short_1"
            android:background="@color/color_4"
            android:text="@string/so4"
            android:textColor="#414141"
            android:textSize="40dp"
            app:backgroundTint="@null" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="@integer/material_motion_duration_short_1"
            android:background="@color/color_5"
            android:text="@string/so5"
            android:textColor="#414141"
            android:textSize="40dp"
            app:backgroundTint="@null" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/color_6"
        android:text="@string/so6"
        android:textColor="#414141"
        android:textSize="40dp"
        app:backgroundTint="@null" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_7"
            android:text="@string/so7"
            android:textSize="40dp"
            app:backgroundTint="@null" />

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_8"
                android:text="@string/so8"
                android:textSize="40dp"
                app:backgroundTint="@null" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_9"
                android:text="@string/so9"
                android:textSize="40dp"
                app:backgroundTint="@null" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>